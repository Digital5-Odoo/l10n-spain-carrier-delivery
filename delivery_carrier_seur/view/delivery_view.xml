<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_delivery_carrier_form" model="ir.ui.view">
          <field name="name">delivery_base.delivery.carrier.view_form</field>
          <field name="model">delivery.carrier</field>
          <field name="inherit_id" ref="base_delivery_carrier_label.view_delivery_carrier_form" />
          <field name="arch" type="xml">
            <field name="delivery_type" position="after">
              <field name="seur_config_id" attrs="{'invisible': [('delivery_type', '!=', 'seur')], 'required': [('delivery_type', '=', 'seur')]}"/>
              <field name="seur_service_code" attrs="{'invisible': [('delivery_type', '!=', 'seur')], 'required': [('delivery_type', '=', 'seur')]}"/>
              <field name="seur_product_code" attrs="{'invisible': [('delivery_type', '!=', 'seur')], 'required': [('delivery_type', '=', 'seur')]}"/>
            </field>

            <field name="code" position="attributes">
                <attribute name="attrs">{'invisible': [('delivery_type', '=', 'seur')]}</attribute>
            </field>
          </field>
        </record>

    </data>
</odoo>